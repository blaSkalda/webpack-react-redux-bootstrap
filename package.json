{
  "name": "front-end",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "SET NODE_ENV=development&webpack-dev-server --progress --hide-modules --watch",
    "build": "SET NODE_ENV=development&webpack --progress --hide-modules",
    "production": "SET NODE_ENV=production& webpack --progress --hide-modules -p",
    "test": "yarn jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-css-modules": "^2.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "react-test-renderer": "^16.11.0",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.12.0",
    "stylelint-webpack-plugin": "^1.0.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "history": "^4.10.1",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "nyc": {
    "register": [
      "babel-register"
    ],
    "root": "./src",
    "dir": "./coverage/unit",
    "exclude": [
      "**/*.spec.js",
      "**/vendor/*.js",
      "**/utilities/*.js",
      "public"
    ],
    "repository": {
      "type": "git",
      "url": "tbc"
    },
    "reporter": [
      "lcov",
      "text",
      "text-summary",
      "html"
    ],
    "extension": [
      ".jsx"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(js|jsx|ts)$": "babel-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/svgTransform.js"
    },
    "moduleNameMapper": {
      "\\.(scss|css)$": "jest-css-modules"
    },
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
